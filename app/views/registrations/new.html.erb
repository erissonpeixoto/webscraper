<div class="d-flex align-items-center justify-content-center min-vh-100 bg-light">
  <div class="card shadow" style="max-width: 28rem; width: 100%;">
    <div class="card-body">
      <h1 class="card-title text-center mb-4">Criar conta</h1>

      <div>
        <% if flash[:alert] %>
          <div class="alert alert-danger" role="alert">
            <%= flash[:alert] %>
          </div>
        <% end %>
        <% if flash[:notice] %>
          <div class="alert alert-success" role="alert">
            <%= flash[:notice] %>
          </div>
        <% end %>
      </div>

      <%= form_with model: @user, url: registration_path, class: "needs-validation", novalidate: true do |form| %>
        <div class="mb-3">
          <%= form.label :email_address, "Email Address", class: "form-label" %>
          <%= form.email_field :email_address, required: true, class: "form-control", autofocus: true %>
        </div>

        <div class="mb-3">
          <%= form.label :password, "Password", class: "form-label" %>
          <%= form.password_field :password, required: true, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :password_confirmation, "Password Confirmation", class: "form-label" %>
          <%= form.password_field :password_confirmation, required: true, class: "form-control" %>
        </div>

        <div class="d-grid">
          <%= form.submit "Registrar", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>